#cloud-config
hostname: ${local_hostname}
users:
  - name: ${user_name}
    groups: sudo
    shell: /bin/bash
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    lock_passwd: false
    plain_text_passwd: '${user_password}'
    ssh_pwauth: true
chpasswd:
  list: |
    ${user_name}:${user_password}
  expire: false
